<?xml version="1.0" encoding="utf-8"?>
<ru.bk.klim9.corewillsoft.ui.dashboard.AccountItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/iaTitleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_account_title"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textAppearance="@style/AccountTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cash"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/iaAmountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textAppearance="@style/AccountTitle"
        app:layout_constraintBottom_toBottomOf="@+id/iaTitleTv"
        app:layout_constraintEnd_toEndOf="@+id/iaTitleTv"
        app:layout_constraintTop_toTopOf="@+id/iaTitleTv"
        tools:text="$2000" />
</ru.bk.klim9.corewillsoft.ui.dashboard.AccountItemView>